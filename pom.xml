	<artifactId>LoanManage</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>war</packaging>

	<properties>
		<fastjson.version>1.2.22</fastjson.version>
		<spring.version>4.3.6.RELEASE</spring.version>
